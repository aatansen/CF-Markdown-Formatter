{
  "manifest_version": 3,
  "name": "CF Markdown Formatter",
  "version": "1.0",
  "description": "Format Codeforces problems to Markdown",
  "icons": {
    "16": "logo-16x16.png",
    "32": "logo-32x32.png",
    "192": "logo-192x192.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo-192x192.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://codeforces.com/*"
  ]
}